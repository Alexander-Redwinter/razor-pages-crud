@page
@model RazorCRUD.UpsertModel
@{
    ViewData["Title"] = "Upsert";
}


<br />
<h2 class="text-info">@(Model.Item.Id == 0? "Create" : "Edit")</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        @if(Model.Item.Id != 0)
        {
         <input type="hidden" asp-for="Item.Id">
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Name" class="form-control" />
            </div>
            <span asp-validation-for="Item.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Author" class="form-control" />
            </div>
            <span asp-validation-for="Item.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Item.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Item.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Item.Id == 0 ? "Create" : "Edit")</button>
</div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to the List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



